@model CatalogModel

<div class="col-12 col-md-3">
    <div class="card">
        <div class="card-header">
            <i class="fa fa-heart"></i> Featured Product
        </div>
        <a asp-page="ProductDetail" asp-route-productId="@Model.Id" class="mt-3"><img asp-append-version="true" class="img-fluid border-0" src="~/images/product/product-12.png" alt="Card image cap"></a>
        <div class="card-body">
            <h4 class="card-title text-center"><a asp-page="ProductDetail" asp-route-productId="@Model.Id" title="View Product">@Model.Name</a></h4>
            <div class="row">
                <div class="col">
                    <p class="btn btn-light btn-block">@Model.Price $</p>
                </div>
                <div class="col">
                    <a asp-page="ProductDetail" asp-route-productId="@Model.Id" class="btn btn-info btn-block">View</a>
                </div>
            </div>
        </div>
    </div>
</div>